{% extends 'base.html.twig' %}

{% block title %}Administration - ENZO Collection{% endblock %}

{% block categories_section %}
    {# Override to prevent duplication #}
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="display-6 fw-light mb-0">Tableau de bord</h1>
                <p class="text-muted mb-0">Vue d'ensemble de votre boutique</p>
            </div>
            <div class="text-end">
                <small class="text-muted">Dernière mise à jour: {{ "now"|date("d/m/Y H:i") }}</small>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row g-4 mb-5">
            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                    <i class="fas fa-clock fa-2x text-primary"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Produits Total</h6>
                                <h3 class="mb-0 fw-bold">{{ total_products|number_format(0, ',', ' ') }}</h3>
                                <small class="text-primary">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Catalogue complet
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-opacity-10 rounded-3 p-3">
                                    <i class="fas fa-check-circle fa-2x text-success"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Produits Actifs</h6>
                                <h3 class="mb-0 fw-bold">{{ active_products|number_format(0, ',', ' ') }}</h3>
                                <small class="text-success">
                                    <i class="fas fa-arrow-up me-1"></i>
                                    En ligne
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-info bg-opacity-10 rounded-3 p-3">
                                    <i class="fas fa-shopping-bag fa-2x text-info"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Commandes Total</h6>
                                <h3 class="mb-0 fw-bold">{{ total_orders|number_format(0, ',', ' ') }}</h3>
                                <small class="text-info">
                                    <i class="fas fa-chart-line me-1"></i>
                                    Toutes périodes
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                                    <i class="fas fa-tags fa-2x text-warning"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Catégories</h6>
                                <h3 class="mb-0 fw-bold">{{ total_categories|number_format(0, ',', ' ') }}</h3>
                                <small class="text-warning">
                                    <i class="fas fa-layer-group me-1"></i>
                                    Actives
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Quick Actions -->
            <div class="col-xl-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0 fw-600">
                            <i class="fas fa-cogs me-2 text-primary"></i>
                            Actions rapides
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-3">
                            <a href="{{ path('app_admin_product_new') }}" class="btn btn-outline-primary btn-lg d-flex align-items-center text-start">
                                <div class="bg-primary bg-opacity-10 rounded-3 p-2 me-3">
                                    <i class="fas fa-plus text-primary"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-600">Ajouter un produit</div>
                                    <small class="text-muted">Créer une nouvelle montre</small>
                                </div>
                                <i class="fas fa-chevron-right text-muted"></i>
                            </a>

                            <a href="{{ path('app_admin_category_new') }}" class="btn btn-outline-warning btn-lg d-flex align-items-center text-start">
                                <div class="bg-warning bg-opacity-10 rounded-3 p-2 me-3">
                                    <i class="fas fa-tags text-warning"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-600">Ajouter une catégorie</div>
                                    <small class="text-muted">Créer une nouvelle catégorie</small>
                                </div>
                                <i class="fas fa-chevron-right text-muted"></i>
                            </a>

                            <a href="{{ path('app_admin_products') }}" class="btn btn-outline-dark btn-lg d-flex align-items-center text-start">
                                <div class="bg-dark bg-opacity-10 rounded-3 p-2 me-3">
                                    <i class="fas fa-list text-dark"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-600">Gérer les produits</div>
                                    <small class="text-muted">Modifier, supprimer les montres</small>
                                </div>
                                <i class="fas fa-chevron-right text-muted"></i>
                            </a>

                            <a href="{{ path('app_admin_orders') }}" class="btn btn-outline-success btn-lg d-flex align-items-center text-start">
                                <div class="bg-success bg-opacity-10 rounded-3 p-2 me-3">
                                    <i class="fas fa-shopping-cart text-success"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-600">Gérer les commandes</div>
                                    <small class="text-muted">Suivre et traiter les commandes</small>
                                </div>
                                <i class="fas fa-chevron-right text-muted"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="col-xl-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 fw-600">
                                <i class="fas fa-clock me-2 text-primary"></i>
                                Commandes Récentes
                            </h5>
                            <a href="{{ path('app_admin_orders') }}" class="btn btn-outline-primary btn-sm">
                                Voir tout
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if recent_orders is empty %}
                            <div class="text-center py-4">
                                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                                <h6 class="text-muted">Aucune commande récente</h6>
                                <p class="text-muted mb-0">Les nouvelles commandes apparaîtront ici</p>
                            </div>
                        {% else %}
                            <div class="space-y-3">
                                {% for order in recent_orders %}
                                    <div class="d-flex align-items-center {% if not loop.last %}pb-3 border-bottom{% endif %}">
                                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <i class="fas fa-receipt text-primary"></i>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1 fw-600">#{{ order.id }}</h6>
                                                    <small class="text-muted">{{ order.user.firstName }} {{ order.user.lastName }}</small>
                                                </div>
                                                <div class="text-end">
                                                    <span class="fw-600 text-primary">{{ order.total|number_format(2, ',', ' ') }} DT</span>
                                                    <small class="text-muted d-block">{{ order.createdAt|date('d/m/Y H:i') }}</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Management Links -->
        <div class="row g-4 mt-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-clock fa-2x text-primary"></i>
                        </div>
                        <h5 class="fw-600 mb-2">Produits</h5>
                        <p class="text-muted mb-4">Gérer le catalogue de montres</p>
                        <a href="{{ path('app_admin_products') }}" class="btn btn-primary">
                            <i class="fas fa-arrow-right me-2"></i>Accéder
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body p-4">
                        <div class="bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-tags fa-2x text-warning"></i>
                        </div>
                        <h5 class="fw-600 mb-2">Catégories</h5>
                        <p class="text-muted mb-4">Organiser les produits par catégorie</p>
                        <a href="{{ path('app_admin_categories') }}" class="btn btn-warning">
                            <i class="fas fa-arrow-right me-2"></i>Accéder
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body p-4">
                        <div class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-shopping-cart fa-2x text-success"></i>
                        </div>
                        <h5 class="fw-600 mb-2">Commandes</h5>
                        <p class="text-muted mb-4">Suivre et traiter les commandes</p>
                        <a href="{{ path('app_admin_orders') }}" class="btn btn-success">
                            <i class="fas fa-arrow-right me-2"></i>Accéder
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body p-4">
                        <div class="bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-users fa-2x text-info"></i>
                        </div>
                        <h5 class="fw-600 mb-2">Utilisateurs</h5>
                        <p class="text-muted mb-4">Gérer les comptes clients</p>
                        <a href="{{ path('app_admin_users') }}" class="btn btn-info">
                            <i class="fas fa-arrow-right me-2"></i>Accéder
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .btn:hover {
            transform: translateY(-1px);
        }

        .fw-600 {
            font-weight: 600;
        }

        .space-y-3 > * + * {
            margin-top: 1rem;
        }

        .bg-opacity-10 {
            --bs-bg-opacity: 0.1;
        }
    </style>
{% endblock %}
