{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit - Administration{% endblock %}

{% block categories_section %}
    {# Override to prevent duplication #}
{% endblock %}

{% block body %}
    <div class="container py-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Administration</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_admin_products') }}">Produits</a></li>
                <li class="breadcrumb-item active">Nouveau</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0"><i class="fas fa-plus me-2"></i>Nouveau Produit</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.price) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.brandChoice) }}
                            </div>
                            <div class="col-md-6" id="custom-brand-field">
                                {{ form_row(form.brand) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.model) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.stock) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.mainCategory) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.category) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.imageFile) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.description) }}
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    {{ form_widget(form.isActive) }}
                                    {{ form_label(form.isActive) }}
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_admin_products') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Créer le Produit
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleBrandInput(value) {
            const customBrandField = document.getElementById('custom-brand-field');
            const brandInput = customBrandField.querySelector('input');

            if (value === 'new') {
                customBrandField.style.display = 'block';
                brandInput.required = true;
                brandInput.focus();
            } else {
                customBrandField.style.display = 'none';
                brandInput.required = false;
                brandInput.value = '';
            }
        }

        function updateSubcategories(mainCategoryId) {
            const subcategorySelect = document.querySelector('select[name="product[category]"]');

            if (!mainCategoryId) {
                subcategorySelect.innerHTML = '<option value="">Choisissez d\'abord une catégorie principale...</option>';
                subcategorySelect.disabled = true;
                return;
            }

            // Show loading state
            subcategorySelect.innerHTML = '<option value="">Chargement...</option>';
            subcategorySelect.disabled = true;

            // Fetch subcategories
            fetch(`{{ path('app_admin_subcategories', {'mainCategoryId': '__ID__'}) }}`.replace('__ID__', mainCategoryId))
                .then(response => response.json())
                .then(subcategories => {
                    subcategorySelect.innerHTML = '<option value="">Choisissez une sous-catégorie...</option>';

                    subcategories.forEach(subcategory => {
                        const option = document.createElement('option');
                        option.value = subcategory.id;
                        option.textContent = subcategory.name;
                        subcategorySelect.appendChild(option);
                    });

                    subcategorySelect.disabled = false;
                })
                .catch(error => {
                    console.error('Error fetching subcategories:', error);
                    subcategorySelect.innerHTML = '<option value="">Erreur lors du chargement</option>';
                });
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            const brandChoice = document.querySelector('select[name="product[brandChoice]"]');
            if (brandChoice) {
                toggleBrandInput(brandChoice.value);
            }

            const mainCategorySelect = document.querySelector('select[name="product[mainCategory]"]');
            if (mainCategorySelect && mainCategorySelect.value) {
                updateSubcategories(mainCategorySelect.value);
            }
        });
    </script>
{% endblock %}
