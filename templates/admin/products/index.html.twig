{% extends 'base.html.twig' %}

{% block title %}Gestion des produits - Administration{% endblock %}

{% block categories_section %}
    {# Override to prevent duplication #}
{% endblock %}

{% block body %}
    <!-- Admin Header -->
    <section class="py-4 bg-dark text-white">
        <div class="container">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="display-6 fw-light mb-1">Gestion des produits</h1>
                    <p class="mb-0 text-light">{{ products|length }} produit(s) au total</p>
                </div>
                <a href="{{ path('app_admin_product_new') }}" class="btn btn-light">
                    <i class="fas fa-plus me-2"></i>Nouveau produit
                </a>
            </div>
        </div>
    </section>

    <div class="container py-5">
        <!-- Filters -->
        <div class="row mb-4">
            <div class="col-lg-10">
                <div class="bg-white p-4 shadow-sm rounded">
                    <h5 class="mb-3">Filtres</h5>
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="search" class="form-label">Recherche</label>
                            <input type="text" class="form-control" id="search" name="search" value="{{ current_search }}" placeholder="Nom ou description...">
                        </div>
                        <div class="col-md-3">
                            <label for="brand" class="form-label">Marque</label>
                            <select class="form-select" id="brand" name="brand">
                                <option value="">Toutes les marques</option>
                                {% for brand in brands %}
                                    <option value="{{ brand }}" {{ current_brand == brand ? 'selected' : '' }}>{{ brand }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="category" class="form-label">Catégorie</label>
                            <select class="form-select" id="category" name="category">
                                <option value="">Toutes les catégories</option>
                                {% for mainCategory in mainCategories %}
                                    <optgroup label="{{ mainCategory.name }}">
                                        <option value="{{ mainCategory.slug }}" {{ current_category == mainCategory.slug ? 'selected' : '' }}>
                                            Tous les {{ mainCategory.name|lower }}
                                        </option>
                                        {% for subcategory in mainCategory.activeChildren %}
                                            <option value="{{ subcategory.slug }}" {{ current_category == subcategory.slug ? 'selected' : '' }}>
                                                {{ subcategory.name }}
                                            </option>
                                        {% endfor %}
                                    </optgroup>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search me-1"></i>Filtrer
                            </button>
                            {% if current_search or current_brand or current_category %}
                                <a href="{{ path('app_admin_products') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i>Effacer
                                </a>
                            {% endif %}
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Products Table -->
        <div class="bg-white shadow-sm rounded">
            {% if products is empty %}
                <div class="text-center py-5">
                    <i class="fas fa-clock fa-4x text-muted mb-4"></i>
                    <h3 class="fw-light">Aucun produit trouvé</h3>
                    <p class="text-muted mb-4">Commencez par ajouter votre première montre</p>
                    <a href="{{ path('app_admin_product_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Ajouter un produit
                    </a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                        <tr>
                            <th>Produit</th>
                            <th>Catégorie</th>
                            <th>Prix</th>
                            <th>Stock</th>
                            <th>Statut</th>
                            <th>Créé le</th>
                            <th width="150">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {% if product.image %}
                                            <img src="{{ asset('uploads/images/' ~ product.image) }}" width="60" height="60" class="rounded me-3" style="object-fit: cover;">
                                        {% else %}
                                            <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                <i class="fas fa-clock fa-2x text-muted"></i>
                                            </div>
                                        {% endif %}
                                        <div>
                                            <div class="fw-600">{{ product.name }}</div>
                                            <small class="text-muted">{{ product.brand }} - {{ product.model }}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    {% if product.category %}
                                        {% if product.category.parent and product.category.parent.isMainCategory %}
                                            <span class="badge bg-primary">{{ product.category.parent.name }}</span>
                                            <br><small class="text-muted">{{ product.category.name }}</small>
                                        {% else %}
                                            <span class="badge bg-primary">{{ product.category.name }}</span>
                                        {% endif %}
                                    {% else %}
                                        <span class="badge bg-secondary">Non catégorisé</span>
                                    {% endif %}
                                </td>
                                <td class="fw-600">{{ product.price|number_format(0, ',', ' ') }} DT</td>
                                <td>
                                    {% if product.stock > 5 %}
                                        <span class="badge bg-success fs-6">{{ product.stock }}</span>
                                    {% elseif product.stock > 0 %}
                                        <span class="badge bg-warning text-dark fs-6">{{ product.stock }}</span>
                                    {% else %}
                                        <span class="badge bg-danger fs-6">0</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if product.isActive %}
                                        {% if product.stock > 0 %}
                                            <span class="badge bg-success">Disponible</span>
                                        {% else %}
                                            <span class="badge bg-danger">Rupture</span>
                                        {% endif %}
                                    {% else %}
                                        <span class="badge bg-secondary">Inactif</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <small class="text-muted">{{ product.createdAt|date('d/m/Y') }}</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-outline-secondary" title="Voir" target="_blank">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_admin_product_edit', {id: product.id}) }}" class="btn btn-outline-primary" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_admin_product_delete', {id: product.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                            <button class="btn btn-outline-danger" title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
