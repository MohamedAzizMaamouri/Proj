{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories - Administration{% endblock %}

{% block categories_section %}
    {# Override to prevent duplication #}
{% endblock %}

{% block body %}
    <!-- Admin Header -->
    <section class="py-4 bg-dark text-white">
        <div class="container">
            <div class="d-flex align-items-center justify-content-between">
                <div>
                    <h1 class="display-6 fw-light mb-1">Gestion des catégories</h1>
                    <p class="mb-0 text-light">{{ categories|length }} catégorie(s) au total</p>
                </div>
                <a href="{{ path('app_admin_category_new') }}" class="btn btn-light">
                    <i class="fas fa-plus me-2"></i>Nouvelle catégorie
                </a>
            </div>
        </div>
    </section>

    <div class="container py-5">
        <!-- Filters -->
        <div class="row mb-4">
            <div class="col-lg-8">
                <div class="bg-white p-4 shadow-sm rounded">
                    <h5 class="mb-3">Filtres</h5>
                    <form method="get" class="row g-3">
                        <div class="col-md-6">
                            <label for="search" class="form-label">Recherche</label>
                            <input type="text" class="form-control" id="search" name="search" value="{{ current_search }}" placeholder="Nom ou description...">
                        </div>
                        <div class="col-md-4">
                            <label for="status" class="form-label">Statut</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">Tous les statuts</option>
                                <option value="active" {{ current_status == 'active' ? 'selected' : '' }}>Actives</option>
                                <option value="inactive" {{ current_status == 'inactive' ? 'selected' : '' }}>Inactives</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search me-1"></i>Filtrer
                            </button>
                            {% if current_search or current_status %}
                                <a href="{{ path('app_admin_categories') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i>Effacer
                                </a>
                            {% endif %}
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Categories Grid -->
        <div class="bg-white shadow-sm rounded">
            {% if categories is empty %}
                <div class="text-center py-5">
                    <i class="fas fa-tags fa-4x text-muted mb-4"></i>
                    <h3 class="fw-light">Aucune catégorie trouvée</h3>
                    <p class="text-muted mb-4">Commencez par créer votre première catégorie</p>
                    <a href="{{ path('app_admin_category_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Ajouter une catégorie
                    </a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                        <tr>
                            <th>Catégorie</th>
                            <th>Produits</th>
                            <th>Statut</th>
                            <th>Créée le</th>
                            <th width="200">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {% if category.image %}
                                            <img src="{{ asset('uploads/categories/' ~ category.image) }}" width="60" height="60" class="rounded me-3" style="object-fit: cover;">
                                        {% else %}
                                            <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                <i class="fas fa-tags fa-2x text-muted"></i>
                                            </div>
                                        {% endif %}
                                        <div>
                                            <div class="fw-600">{{ category.name }}</div>
                                            {% if category.description %}
                                                <small class="text-muted">{{ category.description|length > 50 ? category.description|slice(0, 50) ~ '...' : category.description }}</small>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary fs-6">{{ category.products|length }}</span>
                                    {% if category.products|length > 0 %}
                                        <small class="text-muted d-block">produits</small>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if category.isIsActive %}
                                        <span class="badge bg-success">Active</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactive</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <small class="text-muted">{{ category.createdAt|date('d/m/Y') }}</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_category_show', {slug: category.slug}) }}" class="btn btn-outline-secondary" title="Voir" target="_blank">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_admin_category_edit', {id: category.id}) }}" class="btn btn-outline-primary" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_admin_category_toggle_status', {id: category.id}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ category.id) }}">
                                            <button class="btn btn-outline-warning" title="{{ category.isIsActive ? 'Désactiver' : 'Activer' }}">
                                                <i class="fas fa-{{ category.isIsActive ? 'pause' : 'play' }}"></i>
                                            </button>
                                        </form>
                                        {% if category.products|length == 0 %}
                                            <form method="post" action="{{ path('app_admin_category_delete', {id: category.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                                <button class="btn btn-outline-danger" title="Supprimer">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        {% else %}
                                            <button class="btn btn-outline-danger" title="Impossible de supprimer (contient des produits)" disabled>
                                                <i class="fas fa-lock"></i>
                                            </button>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
