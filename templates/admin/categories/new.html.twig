{% extends 'base.html.twig' %}

{% block title %}Nouvelle Catégorie - Administration{% endblock %}

{% block categories_section %}
    {# Override to prevent duplication #}
{% endblock %}

{% block body %}
    <div class="container py-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Administration</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_admin_categories') }}">Catégories</a></li>
                <li class="breadcrumb-item active">Nouvelle</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0"><i class="fas fa-plus me-2"></i>Nouvelle Catégorie</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.imageFile) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.description) }}
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    {{ form_widget(form.isActive) }}
                                    {{ form_label(form.isActive) }}
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_admin_categories') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Créer la Catégorie
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
