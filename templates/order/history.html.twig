{% extends 'base.html.twig' %}

{% block title %}Mes Commandes - WatchStore{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4"><i class="fas fa-history me-2"></i>Mes Commandes</h1>

        {% if orders is empty %}
            <div class="text-center py-5">
                <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                <h3>Aucune commande</h3>
                <p class="text-muted">Vous n'avez pas encore passé de commande</p>
                <a href="{{ path('app_product_index') }}" class="btn btn-primary">
                    <i class="fas fa-shopping-cart me-2"></i>Découvrir nos produits
                </a>
            </div>
        {% else %}
            {% for order in orders %}
                <div class="card mb-3">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col-md-3">
                                <strong>Commande #{{ order.id }}</strong>
                            </div>
                            <div class="col-md-3">
                                {{ order.createdAt|date('d/m/Y à H:i') }}
                            </div>
                            <div class="col-md-3">
                                <span class="badge bg-{{ order.status == 'pending' ? 'warning' : (order.status == 'completed' ? 'success' : 'info') }}">
                                    {{ order.status|title }}
                                </span>
                            </div>
                            <div class="col-md-3 text-end">
                                <strong class="text-primary">{{ order.total|number_format(2, ',', ' ') }} €</strong>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <h6>Articles ({{ order.orderItems|length }})</h6>
                                {% for item in order.orderItems %}
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="flex-grow-1">
                                            <strong>{{ item.product.name }}</strong>
                                            <small class="text-muted d-block">{{ item.product.brand }} - Qté: {{ item.quantity }}</small>
                                        </div>
                                        <span>{{ item.subTotal|number_format(2, ',', ' ') }} €</span>
                                    </div>
                                {% endfor %}
                            </div>
                            <div class="col-md-4">
                                <h6>Livraison</h6>
                                <p class="small text-muted mb-0">{{ order.shippingAddress|nl2br }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_order_show', {id: order.id}) }}" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>Voir les détails
                        </a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
