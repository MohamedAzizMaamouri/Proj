{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - ENZO Collection{% endblock %}

{% block categories_section %}
    {# Override to prevent duplication #}
{% endblock %}

{% block body %}
    <!-- Category Header -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center">
                <h1 class="display-4 fw-light mb-3">{{ category.name }}</h1>
                <p class="lead text-muted">{{ category.description }}</p>
            </div>
        </div>
    </section>

    <div class="container py-5">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-decoration-none">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_product_index') }}" class="text-decoration-none">Montres</a></li>
                <li class="breadcrumb-item active">{{ category.name }}</li>
            </ol>
        </nav>

        <div class="row">
            <!-- Sidebar Filters -->
            <div class="col-lg-3 mb-4">
                <div class="bg-white p-4 shadow-sm">
                    <h5 class="fw-600 mb-4">Filtres</h5>

                    <form method="get">
                        <div class="mb-4">
                            <label for="search" class="form-label fw-500">Recherche</label>
                            <input type="text" class="form-control" id="search" name="search" value="{{ current_search }}" placeholder="Nom ou description...">
                        </div>

                        <div class="mb-4">
                            <label for="brand" class="form-label fw-500">Marque</label>
                            <select class="form-select" id="brand" name="brand">
                                <option value="">Toutes les marques</option>
                                {% for brand in brands %}
                                    <option value="{{ brand }}" {{ current_brand == brand ? 'selected' : '' }}>{{ brand }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <button type="submit" class="btn btn-dark w-100">
                            <i class="fas fa-search me-2"></i>Filtrer
                        </button>

                        {% if current_search or current_brand %}
                            <a href="{{ path('app_category_show', {slug: category.slug}) }}" class="btn btn-outline-secondary w-100 mt-2">
                                <i class="fas fa-times me-2"></i>Effacer les filtres
                            </a>
                        {% endif %}
                    </form>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-light">{{ category.name }} ({{ products|length }})</h2>
                </div>

                {% if products is empty %}
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-4x text-muted mb-4"></i>
                        <h3 class="fw-light">Aucun produit trouvé dans cette catégorie</h3>
                        <p class="text-muted">Essayez de modifier vos critères de recherche</p>
                        <a href="{{ path('app_product_index') }}" class="btn-primary-custom">Voir tous les produits</a>
                    </div>
                {% else %}
                    <div class="row g-4">
                        {% for product in products %}
                            <div class="col-lg-4 col-md-6">
                                <div class="product-card">
                                    <div class="position-relative overflow-hidden">
                                        {% if product.image %}
                                            <img src="{{ asset('uploads/images/' ~ product.image) }}" class="product-image" alt="{{ product.name }}">
                                        {% else %}
                                            <div class="product-image bg-light d-flex align-items-center justify-content-center">
                                                <i class="fas fa-clock fa-3x text-muted"></i>
                                            </div>
                                        {% endif %}

                                        <!-- Quick Actions Overlay -->
                                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex align-items-center justify-content-center opacity-0 product-overlay">
                                            <div class="text-center">
                                                <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-light btn-sm me-2 mb-2">
                                                    <i class="fas fa-eye me-1"></i>Voir Détails
                                                </a>
                                                {% if app.user and product.stock > 0 %}
                                                    <form method="post" action="{{ path('app_cart_add', {id: product.id}) }}" class="d-inline">
                                                        <button type="submit" class="btn btn-dark btn-sm mb-2">
                                                            <i class="fas fa-cart-plus me-1"></i>Ajouter au Panier
                                                        </button>
                                                    </form>
                                                {% elseif product.stock == 0 %}
                                                    <button class="btn btn-secondary btn-sm mb-2" disabled>
                                                        <i class="fas fa-times me-1"></i>Rupture de Stock
                                                    </button>
                                                {% endif %}
                                            </div>
                                        </div>

                                        <!-- Stock Badge -->
                                        {% if product.stock <= 5 and product.stock > 0 %}
                                            <div class="position-absolute top-0 end-0 m-3">
                                                <span class="badge bg-warning text-dark">Dernières pièces</span>
                                            </div>
                                        {% elseif product.stock == 0 %}
                                            <div class="position-absolute top-0 end-0 m-3">
                                                <span class="badge bg-danger">Rupture</span>
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="product-info text-center">
                                        <div class="product-brand">{{ product.brand }}</div>
                                        <h5 class="product-name">{{ product.name }}</h5>
                                        <div class="product-price">{{ product.price|number_format(0, ',', ' ') }} DT</div>
                                        <small class="text-muted">{{ product.model }}</small>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <style>
        .product-overlay {
            transition: opacity 0.3s ease;
        }
        .product-card:hover .product-overlay {
            opacity: 1 !important;
        }
    </style>
{% endblock %}
