{% extends 'base.html.twig' %}

{% block title %}Catégories - ENZO Collection{% endblock %}

{% block categories_section %}
    {# Override to prevent duplication #}
{% endblock %}

{% block body %}
    <!-- Page Header -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center">
                <h1 class="display-4 fw-light mb-3">Nos Catégories</h1>
                <p class="lead text-muted">Découvrez notre sélection exclusive de montres par catégorie</p>
            </div>
        </div>
    </section>

    <div class="container py-5">
        <div class="row g-4">
            {% for category in categories %}
                <div class="col-md-4">
                    <a href="{{ path('app_category_show', {slug: category.slug}) }}" class="text-decoration-none">
                        <div class="category-card h-100">
                            {% if category.image %}
                                <img src="{{ asset('uploads/categories/' ~ category.image) }}" class="category-image" alt="{{ category.name }}">
                            {% else %}
                                <div class="category-image bg-gradient d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                    {% if 'luxe' in category.slug %}
                                        <i class="fas fa-gem fa-4x text-white"></i>
                                    {% elseif 'sport' in category.slug %}
                                        <i class="fas fa-running fa-4x text-white"></i>
                                    {% elseif 'chronographe' in category.slug %}
                                        <i class="fas fa-stopwatch fa-4x text-white"></i>
                                    {% elseif 'plongee' in category.slug %}
                                        <i class="fas fa-swimmer fa-4x text-white"></i>
                                    {% elseif 'aviateur' in category.slug %}
                                        <i class="fas fa-plane fa-4x text-white"></i>
                                    {% else %}
                                        <i class="fas fa-clock fa-4x text-white"></i>
                                    {% endif %}
                                </div>
                            {% endif %}

                            <div class="category-overlay">
                                <h4 class="category-name">{{ category.name }}</h4>
                                <p class="category-description">{{ category.description }}</p>
                                <div class="mt-3">
                                    <span class="btn btn-light btn-sm">
                                        {{ category.activeProducts|length }} produit{{ category.activeProducts|length > 1 ? 's' : '' }}
                                        <i class="fas fa-arrow-right ms-1"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
