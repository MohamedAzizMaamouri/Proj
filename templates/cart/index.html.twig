{% extends 'base.html.twig' %}

{% block title %}Mon Panier - WatchStore{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4"><i class="fas fa-shopping-cart me-2"></i>Mon Panier</h1>

        {% if cart.cartItems is empty %}
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <h3>Votre panier est vide</h3>
                <p class="text-muted">Découvrez notre collection de montres de luxe</p>
                <a href="{{ path('app_product_index') }}" class="btn btn-primary">
                    <i class="fas fa-arrow-left me-2"></i>Continuer mes achats
                </a>
            </div>
        {% else %}
            <div class="row">
                <!-- Cart Items -->
                <div class="col-lg-8">
                    {% for item in cart.cartItems %}
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row g-3 align-items-center">
                                    <div class="col-md-2">
                                        {% if item.product.image %}
                                            <img src="{{ asset('uploads/images/' ~ item.product.image) }}" class="img-fluid rounded" alt="{{ item.product.name }}">
                                        {% else %}
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 80px;">
                                                <i class="fas fa-clock fa-2x text-muted"></i>
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="col-md-4">
                                        <h5 class="card-title">{{ item.product.name }}</h5>
                                        <p class="card-text text-muted">{{ item.product.brand }} - {{ item.product.model }}</p>
                                        <p class="card-text"><strong>{{ item.product.price|number_format(2, ',', ' ') }} €</strong></p>
                                    </div>

                                    <div class="col-md-3">
                                        <form method="post" action="{{ path('app_cart_update', {id: item.product.id}) }}" class="d-flex align-items-center">
                                            <label for="quantity_{{ item.product.id }}" class="form-label me-2 mb-0">Qté:</label>
                                            <select class="form-select form-select-sm me-2" id="quantity_{{ item.product.id }}" name="quantity" onchange="this.form.submit()" style="width: 80px;">
                                                {% for i in 0..min(10, item.product.stock) %}
                                                    <option value="{{ i }}" {{ i == item.quantity ? 'selected' : '' }}>
                                                        {{ i == 0 ? 'Supprimer' : i }}
                                                    </option>
                                                {% endfor %}
                                            </select>
                                        </form>
                                    </div>

                                    <div class="col-md-2">
                                        <p class="fw-bold mb-0">{{ item.subTotal|number_format(2, ',', ' ') }} €</p>
                                    </div>

                                    <div class="col-md-1">
                                        <form method="post" action="{{ path('app_cart_remove', {id: item.product.id}) }}">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Cart Summary -->
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Résumé de la commande</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Sous-total ({{ cart.totalItems }} article{{ cart.totalItems > 1 ? 's' : '' }}):</span>
                                <span>{{ cart.total|number_format(2, ',', ' ') }} €</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Livraison:</span>
                                <span class="text-success">Gratuite</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total:</strong>
                                <strong class="text-primary">{{ cart.total|number_format(2, ',', ' ') }} €</strong>
                            </div>

                            <div class="d-grid gap-2">
                                <a href="{{ path('app_order_checkout') }}" class="btn btn-primary btn-lg">
                                    <i class="fas fa-credit-card me-2"></i>Passer la commande
                                </a>
                                <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Continuer mes achats
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Security Info -->
                    <div class="card mt-3">
                        <div class="card-body text-center">
                            <i class="fas fa-shield-alt fa-2x text-success mb-2"></i>
                            <h6>Paiement sécurisé</h6>
                            <small class="text-muted">Vos données sont protégées par cryptage SSL</small>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
