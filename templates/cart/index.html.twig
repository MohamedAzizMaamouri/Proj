{% extends 'base.html.twig' %}

{% block title %}Mon Panier - ENZO Collection{% endblock %}

{% block body %}
    <!-- Page Header -->
    <section class="py-4 bg-light">
        <div class="container">
            <h1 class="display-6 fw-light mb-0">Mon Panier</h1>
        </div>
    </section>

    <div class="container py-5">
        {% if cart.cartItems is empty %}
            <div class="text-center py-5">
                <i class="fas fa-shopping-bag fa-4x text-muted mb-4"></i>
                <h3 class="fw-light mb-3">Votre panier est vide</h3>
                <p class="text-muted mb-4">Découvrez notre collection de montres exceptionnelles</p>
                <a href="{{ path('app_product_index') }}" class="btn-primary-custom">
                    <i class="fas fa-arrow-left me-2"></i>Continuer mes achats
                </a>
            </div>
        {% else %}
            <div class="row g-5">
                <!-- Cart Items -->
                <div class="col-lg-8">
                    <div class="bg-white shadow-sm p-4">
                        <h4 class="fw-light mb-4">Articles dans votre panier</h4>

                        {% for item in cart.cartItems %}
                            <div class="row g-3 align-items-center py-4 {% if not loop.last %}border-bottom{% endif %}">
                                <div class="col-md-2">
                                    {% if item.product.image %}
                                        <img src="{{ asset('uploads/images/' ~ item.product.image) }}" class="img-fluid rounded" alt="{{ item.product.name }}">
                                    {% else %}
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 80px;">
                                            <i class="fas fa-clock fa-2x text-muted"></i>
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="col-md-5">
                                    <h5 class="fw-600 mb-1">{{ item.product.name }}</h5>
                                    <p class="text-muted small mb-1">{{ item.product.brand }} - {{ item.product.model }}</p>
                                    <p class="fw-600 mb-0">{{ item.product.price|number_format(0, ',', ' ') }} DT</p>
                                </div>

                                <div class="col-md-3">
                                    <form method="post" action="{{ path('app_cart_update', {id: item.product.id}) }}" class="d-flex align-items-center">
                                        <label for="quantity_{{ item.product.id }}" class="form-label me-2 mb-0 small">Qté:</label>
                                        <select class="form-select form-select-sm" id="quantity_{{ item.product.id }}" name="quantity" onchange="this.form.submit()" style="width: 80px;">
                                            {% for i in 0..min(10, item.product.stock) %}
                                                <option value="{{ i }}" {{ i == item.quantity ? 'selected' : '' }}>
                                                    {{ i == 0 ? 'Supprimer' : i }}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </form>
                                </div>

                                <div class="col-md-1">
                                    <p class="fw-bold mb-0 text-end">{{ item.subTotal|number_format(0, ',', ' ') }} DT</p>
                                </div>

                                <div class="col-md-1">
                                    <form method="post" action="{{ path('app_cart_remove', {id: item.product.id}) }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Cart Summary -->
                <div class="col-lg-4">
                    <div class="bg-white shadow-sm p-4 sticky-top">
                        <h4 class="fw-light mb-4">Résumé de la commande</h4>

                        <div class="d-flex justify-content-between mb-3">
                            <span>Sous-total ({{ cart.totalItems }} article{{ cart.totalItems > 1 ? 's' : '' }}):</span>
                            <span class="fw-600">{{ cart.total|number_format(0, ',', ' ') }} DT</span>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <span>Livraison:</span>
                            <span class="text-success fw-600">Gratuite</span>
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <span>TVA (19%):</span>
                            <span class="fw-600">{{ (cart.total * 0.19)|number_format(0, ',', ' ') }} DT</span>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-between mb-4">
                            <strong class="fs-5">Total:</strong>
                            <strong class="fs-5 text-dark">{{ (cart.total * 1.19)|number_format(0, ',', ' ') }} DT</strong>
                        </div>

                        <div class="d-grid gap-3">
                            <a href="{{ path('app_order_checkout') }}" class="btn btn-dark btn-lg">
                                <i class="fas fa-credit-card me-2"></i>Passer la commande
                            </a>
                            <a href="{{ path('app_product_index') }}" class="btn btn-outline-dark">
                                <i class="fas fa-arrow-left me-2"></i>Continuer mes achats
                            </a>
                        </div>

                        <!-- Security Info -->
                        <div class="text-center mt-4 p-3 bg-light rounded">
                            <i class="fas fa-shield-alt fa-2x text-success mb-2"></i>
                            <h6 class="fw-600 mb-1">Paiement sécurisé</h6>
                            <small class="text-muted">Vos données sont protégées par cryptage SSL</small>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
