{% extends 'base.html.twig' %}

{% block title %}Nos Montres - ENZO Collection{% endblock %}

{% block categories_section %}
    {# Override to prevent duplication #}
{% endblock %}

{% block body %}
    <!-- Page Header -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center">
                <h1 class="display-4 fw-light mb-3">
                    {% if current_category %}
                        {{ current_category.name }}
                    {% else %}
                        Notre Collection
                    {% endif %}
                </h1>
                <p class="lead text-muted">
                    {% if current_category %}
                        {{ current_category.description }}
                    {% else %}
                        Découvrez notre sélection exclusive de montres
                    {% endif %}
                </p>
            </div>
        </div>
    </section>

    <div class="container py-5">
        <div class="row">
            <!-- Sidebar Filters -->
            <div class="col-lg-3 mb-4">
                <div class="bg-white p-4 shadow-sm">
                    <h5 class="fw-600 mb-4">Filtres</h5>

                    <form method="get">
                        <div class="mb-4">
                            <label for="search" class="form-label fw-500">Recherche</label>
                            <input type="text" class="form-control" id="search" name="search" value="{{ current_search }}" placeholder="Nom ou description...">
                        </div>

                        <div class="mb-4">
                            <label for="brand" class="form-label fw-500">Marque</label>
                            <select class="form-select" id="brand" name="brand">
                                <option value="">Toutes les marques</option>
                                {% for brand in brands %}
                                    <option value="{{ brand }}" {{ current_brand == brand ? 'selected' : '' }}>{{ brand }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="category" class="form-label fw-500">Catégorie</label>
                            <select class="form-select" id="category" name="category">
                                <option value="">Toutes les catégories</option>
                                {% for category in categories %}
                                    <option value="{{ category.slug }}" {{ current_category and current_category.slug == category.slug ? 'selected' : '' }}>
                                        {{ category.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <button type="submit" class="btn btn-dark w-100">
                            <i class="fas fa-search me-2"></i>Filtrer
                        </button>

                        {% if current_search or current_brand or current_category %}
                            <a href="{{ path('app_product_index') }}" class="btn btn-outline-secondary w-100 mt-2">
                                <i class="fas fa-times me-2"></i>Effacer les filtres
                            </a>
                        {% endif %}
                    </form>
                </div>

                <!-- Categories -->
                <div class="bg-white p-4 shadow-sm mt-4">
                    <h5 class="fw-600 mb-4">Catégories</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="{{ path('app_product_index') }}"
                               class="text-decoration-none {{ not current_category ? 'text-dark fw-bold' : 'text-muted' }}">
                                Toutes les montres
                            </a>
                        </li>
                        {% for category in categories %}
                            <li class="mb-2">
                                <a href="{{ path('app_category_show', {slug: category.slug}) }}"
                                   class="text-decoration-none {{ current_category and current_category.id == category.id ? 'text-dark fw-bold' : 'text-muted' }}">
                                    {{ category.name }}
                                    {% if category.products|length > 0 %}
                                        <span class="badge bg-light text-dark ms-1">{{ category.activeProducts|length }}</span>
                                    {% endif %}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-light">
                        {% if current_category %}
                            {{ current_category.name }} ({{ products|length }})
                        {% else %}
                            Montres ({{ products|length }})
                        {% endif %}
                    </h2>
                    <div class="d-flex align-items-center gap-3">
                        <span class="text-muted small">Trier par:</span>
                        <select class="form-select form-select-sm" style="width: auto;" onchange="sortProducts(this.value)">
                            <option value="newest">Plus récent</option>
                            <option value="price_asc">Prix croissant</option>
                            <option value="price_desc">Prix décroissant</option>
                            <option value="name_asc">Nom A-Z</option>
                        </select>
                    </div>
                </div>

                <!-- Active Filters Display -->
                {% if current_search or current_brand or current_category %}
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Filtres actifs:</h6>
                        <div class="d-flex flex-wrap gap-2">
                            {% if current_search %}
                                <span class="badge bg-primary">
                                    Recherche: "{{ current_search }}"
                                    <a href="{{ path('app_product_index') }}?{{ app.request.query.all|merge({search: null})|url_encode }}" class="text-white ms-1">×</a>
                                </span>
                            {% endif %}
                            {% if current_brand %}
                                <span class="badge bg-primary">
                                    Marque: {{ current_brand }}
                                    <a href="{{ path('app_product_index') }}?{{ app.request.query.all|merge({brand: null})|url_encode }}" class="text-white ms-1">×</a>
                                </span>
                            {% endif %}
                            {% if current_category %}
                                <span class="badge bg-primary">
                                    Catégorie: {{ current_category.name }}
                                    <a href="{{ path('app_product_index') }}?{{ app.request.query.all|merge({category: null})|url_encode }}" class="text-white ms-1">×</a>
                                </span>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}

                {% if products is empty %}
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-4x text-muted mb-4"></i>
                        <h3 class="fw-light">Aucun produit trouvé</h3>
                        <p class="text-muted">Essayez de modifier vos critères de recherche</p>
                        <a href="{{ path('app_product_index') }}" class="btn-primary-custom">Voir tous les produits</a>
                    </div>
                {% else %}
                    <div class="row g-4" id="products-grid">
                        {% for product in products %}
                            <div class="col-lg-4 col-md-6 product-item"
                                 data-name="{{ product.name|lower }}"
                                 data-price="{{ product.price }}"
                                 data-date="{{ product.createdAt|date('Y-m-d') }}">
                                <div class="product-card">
                                    <div class="position-relative overflow-hidden">
                                        {% if product.image %}
                                            <img src="{{ asset('uploads/images/' ~ product.image) }}" class="product-image" alt="{{ product.name }}">
                                        {% else %}
                                            <div class="product-image bg-light d-flex align-items-center justify-content-center">
                                                <i class="fas fa-clock fa-3x text-muted"></i>
                                            </div>
                                        {% endif %}

                                        <!-- Quick Actions Overlay -->
                                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex align-items-center justify-content-center opacity-0 product-overlay">
                                            <div class="text-center">
                                                <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-light btn-sm me-2 mb-2">
                                                    <i class="fas fa-eye me-1"></i>Voir Détails
                                                </a>
                                                {% if app.user and product.stock > 0 %}
                                                    <form method="post" action="{{ path('app_cart_add', {id: product.id}) }}" class="d-inline">
                                                        <button type="submit" class="btn btn-dark btn-sm mb-2">
                                                            <i class="fas fa-cart-plus me-1"></i>Ajouter au Panier
                                                        </button>
                                                    </form>
                                                {% elseif product.stock == 0 %}
                                                    <button class="btn btn-secondary btn-sm mb-2" disabled>
                                                        <i class="fas fa-times me-1"></i>Rupture de Stock
                                                    </button>
                                                {% endif %}
                                            </div>
                                        </div>

                                        <!-- Stock Badge -->
                                        {% if product.stock <= 5 and product.stock > 0 %}
                                            <div class="position-absolute top-0 end-0 m-3">
                                                <span class="badge bg-warning text-dark">Dernières pièces</span>
                                            </div>
                                        {% elseif product.stock == 0 %}
                                            <div class="position-absolute top-0 end-0 m-3">
                                                <span class="badge bg-danger">Rupture</span>
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="product-info text-center">
                                        <div class="product-brand">{{ product.brand }}</div>
                                        <h5 class="product-name">{{ product.name }}</h5>
                                        <div class="product-price">{{ product.price|number_format(0, ',', ' ') }} DT</div>
                                        <small class="text-muted">{{ product.model }}</small>
                                        {% if product.category %}
                                            <div class="mt-2">
                                                <a href="{{ path('app_category_show', {slug: product.category.slug}) }}" class="badge bg-light text-dark text-decoration-none">
                                                    {{ product.category.name }}
                                                </a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <style>
        .product-overlay {
            transition: opacity 0.3s ease;
        }
        .product-card:hover .product-overlay {
            opacity: 1 !important;
        }
    </style>

    <script>
        function sortProducts(sortBy) {
            const grid = document.getElementById('products-grid');
            const items = Array.from(grid.children);

            items.sort((a, b) => {
                switch(sortBy) {
                    case 'price_asc':
                        return parseFloat(a.dataset.price) - parseFloat(b.dataset.price);
                    case 'price_desc':
                        return parseFloat(b.dataset.price) - parseFloat(a.dataset.price);
                    case 'name_asc':
                        return a.dataset.name.localeCompare(b.dataset.name);
                    case 'newest':
                    default:
                        return new Date(b.dataset.date) - new Date(a.dataset.date);
                }
            });

            items.forEach(item => grid.appendChild(item));
        }
    </script>
{% endblock %}
