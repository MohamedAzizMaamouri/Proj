{% extends 'base.html.twig' %}

{% block title %}ENZO Collection - Montres de Luxe et Connectées{% endblock %}

{% block categories_section %}
    {# Override the global categories section to prevent duplication #}
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">Collection Exclusive</h1>
            <p class="hero-subtitle">Découvrez notre sélection de montres de luxe et connectées</p>
            <a href="{{ path('app_product_index') }}" class="btn-primary-custom">
                Découvrir la Collection
            </a>
        </div>

        <!-- Navigation arrows -->
        <div class="position-absolute start-0 top-50 translate-middle-y ms-4">
            <button class="btn btn-light rounded-circle" style="width: 50px; height: 50px;">
                <i class="fas fa-chevron-left"></i>
            </button>
        </div>
        <div class="position-absolute end-0 top-50 translate-middle-y me-4">
            <button class="btn btn-light rounded-circle" style="width: 50px; height: 50px;">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </section>

    <!-- Featured Products by Category -->
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-light mb-3">Nos Dernières Arrivées</h2>
                <p class="lead text-muted">Les montres les plus récentes de notre collection par catégorie</p>
            </div>

            {% for categoryData in categoriesWithProducts %}
                <div class="mb-5">
                    <!-- Category Title -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h3 class="fw-light">
                            {% if categoryData.category.mainCategoryType == 'homme' %}
                                <i class="fas fa-male me-2"></i>
                            {% elseif categoryData.category.mainCategoryType == 'femme' %}
                                <i class="fas fa-female me-2"></i>
                            {% elseif categoryData.category.mainCategoryType == 'enfant' %}
                                <i class="fas fa-child me-2"></i>
                            {% elseif categoryData.category.mainCategoryType == 'accessoires' %}
                                <i class="fas fa-gem me-2"></i>
                            {% endif %}
                            {{ categoryData.category.name }}
                        </h3>
                        <a href="{{ path('app_product_index', {category: categoryData.category.slug}) }}"
                           class="btn btn-outline-dark btn-sm">
                            Voir toute la collection
                            <i class="fas fa-arrow-right ms-1"></i>
                        </a>
                    </div>

                    <!-- Products Row -->
                    <div class="row g-4">
                        {% for product in categoryData.products %}
                            <div class="col-lg-3 col-md-6">
                                <div class="product-card">
                                    <div class="position-relative overflow-hidden">
                                        {% if product.image %}
                                            <img src="{{ asset('uploads/images/' ~ product.image) }}" class="product-image" alt="{{ product.name }}">
                                        {% else %}
                                            <div class="product-image bg-light d-flex align-items-center justify-content-center">
                                                <i class="fas fa-clock fa-3x text-muted"></i>
                                            </div>
                                        {% endif %}

                                        <!-- Overlay on hover -->
                                        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex align-items-center justify-content-center opacity-0 transition-opacity" style="transition: opacity 0.3s ease;">
                                            <div class="text-center">
                                                <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-light btn-sm me-2">
                                                    <i class="fas fa-eye me-1"></i>Voir
                                                </a>
                                                {% if app.user and product.stock > 0 %}
                                                    <form method="post" action="{{ path('app_cart_add', {id: product.id}) }}" class="d-inline">
                                                        <button type="submit" class="btn btn-dark btn-sm">
                                                            <i class="fas fa-cart-plus me-1"></i>Ajouter
                                                        </button>
                                                    </form>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="product-info text-center">
                                        <div class="product-brand">{{ product.brand }}</div>
                                        <h5 class="product-name">{{ product.name }}</h5>
                                        <div class="product-price">{{ product.price|number_format(0, ',', ' ') }} DT</div>
                                        {% if product.stock <= 5 and product.stock > 0 %}
                                            <small class="text-warning">Plus que {{ product.stock }} en stock</small>
                                        {% elseif product.stock == 0 %}
                                            <small class="text-danger">Rupture de stock</small>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- Categories Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-light mb-3">Nos Catégories</h2>
                <p class="lead text-muted">Découvrez nos catégories les plus populaires</p>
            </div>

            <div class="row g-4">
                {% for categoryData in popularCategories %}
                    <div class="col-md-4">
                        <a href="{{ path('app_product_index', {category: categoryData.category.slug}) }}" class="text-decoration-none">
                            <div class="category-card h-100">
                                {% if categoryData.category.image %}
                                    <img src="{{ asset('uploads/categories/' ~ categoryData.category.image) }}" class="category-image" alt="{{ categoryData.category.name }}">
                                {% else %}
                                    <div class="category-image bg-gradient d-flex align-items-center justify-content-center"
                                         style="background: linear-gradient(135deg,
                                             {% if categoryData.category.mainCategoryType == 'homme' %}#667eea 0%, #764ba2 100%
                                             {% elseif categoryData.category.mainCategoryType == 'femme' %}#f093fb 0%, #f5576c 100%
                                             {% elseif categoryData.category.mainCategoryType == 'enfant' %}#4facfe 0%, #00f2fe 100%
                                             {% elseif categoryData.category.mainCategoryType == 'accessoires' %}#43e97b 0%, #38f9d7 100%
                                             {% else %}#667eea 0%, #764ba2 100%{% endif %});">
                                        {% if categoryData.category.mainCategoryType == 'homme' %}
                                            <i class="fas fa-male fa-4x text-white"></i>
                                        {% elseif categoryData.category.mainCategoryType == 'femme' %}
                                            <i class="fas fa-female fa-4x text-white"></i>
                                        {% elseif categoryData.category.mainCategoryType == 'enfant' %}
                                            <i class="fas fa-child fa-4x text-white"></i>
                                        {% elseif categoryData.category.mainCategoryType == 'accessoires' %}
                                            <i class="fas fa-gem fa-4x text-white"></i>
                                        {% else %}
                                            <i class="fas fa-clock fa-4x text-white"></i>
                                        {% endif %}
                                    </div>
                                {% endif %}

                                <div class="category-overlay">
                                    <h4 class="category-name">{{ categoryData.category.name }}</h4>
                                    <p class="category-description">{{ categoryData.category.description|slice(0, 80) }}{% if categoryData.category.description|length > 80 %}...{% endif %}</p>
                                    <div class="mt-3">
                                        <span class="btn btn-light btn-sm">
                                            {{ categoryData.productCount }} produit{{ categoryData.productCount > 1 ? 's' : '' }}
                                            <i class="fas fa-arrow-right ms-1"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>

            <div class="text-center mt-5">
                <a href="{{ path('app_category_index') }}" class="btn-primary-custom">
                    Voir Toutes les Catégories
                </a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3 text-center">
                    <div class="mb-3">
                        <i class="fas fa-shipping-fast fa-3x text-dark"></i>
                    </div>
                    <h5 class="fw-light">Livraison Gratuite</h5>
                    <p class="text-muted small">Livraison gratuite dans toute la Tunisie</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="mb-3">
                        <i class="fas fa-shield-alt fa-3x text-dark"></i>
                    </div>
                    <h5 class="fw-light">Garantie Authentique</h5>
                    <p class="text-muted small">Toutes nos montres sont garanties authentiques</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="mb-3">
                        <i class="fas fa-undo fa-3x text-dark"></i>
                    </div>
                    <h5 class="fw-light">Retour Gratuit</h5>
                    <p class="text-muted small">30 jours pour changer d'avis</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="mb-3">
                        <i class="fas fa-headset fa-3x text-dark"></i>
                    </div>
                    <h5 class="fw-light">Support 24/7</h5>
                    <p class="text-muted small">Notre équipe est à votre disposition</p>
                </div>
            </div>
        </div>
    </section>

    <script>
        // Add hover effect to product cards
        document.addEventListener('DOMContentLoaded', function() {
            const productCards = document.querySelectorAll('.product-card');

            productCards.forEach(card => {
                const overlay = card.querySelector('.position-absolute.bg-dark');

                card.addEventListener('mouseenter', function() {
                    if (overlay) {
                        overlay.classList.remove('opacity-0');
                        overlay.classList.add('opacity-100');
                    }
                });

                card.addEventListener('mouseleave', function() {
                    if (overlay) {
                        overlay.classList.remove('opacity-100');
                        overlay.classList.add('opacity-0');
                    }
                });
            });
        });
    </script>
{% endblock %}
