{% extends 'base.html.twig' %}

{% block title %}ENZO Collection - Montres de Luxe et Connectées{% endblock %}

{% block categories_section %}
    {# Override the global categories section to prevent duplication #}
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">Collection Exclusive</h1>
            <p class="hero-subtitle">Découvrez notre sélection de montres de luxe et connectées</p>
            <a href="{{ path('app_product_index') }}" class="btn-primary-custom">
                Découvrir la Collection
            </a>
        </div>

        <!-- Navigation arrows -->
        <div class="position-absolute start-0 top-50 translate-middle-y ms-4">
            <button class="btn btn-light rounded-circle" style="width: 50px; height: 50px;">
                <i class="fas fa-chevron-left"></i>
            </button>
        </div>
        <div class="position-absolute end-0 top-50 translate-middle-y me-4">
            <button class="btn btn-light rounded-circle" style="width: 50px; height: 50px;">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-light mb-3">Nos Dernières Arrivées</h2>
                <p class="lead text-muted">Les montres les plus récentes de notre collection</p>
            </div>

            <div class="row g-4">
                {% for product in products %}
                    <div class="col-lg-3 col-md-6">
                        <div class="product-card">
                            <div class="position-relative overflow-hidden">
                                {% if product.image %}
                                    <img src="{{ asset('uploads/images/' ~ product.image) }}" class="product-image" alt="{{ product.name }}">
                                {% else %}
                                    <div class="product-image bg-light d-flex align-items-center justify-content-center">
                                        <i class="fas fa-clock fa-3x text-muted"></i>
                                    </div>
                                {% endif %}

                                <!-- Overlay on hover -->
                                <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex align-items-center justify-content-center opacity-0 transition-opacity" style="transition: opacity 0.3s ease;">
                                    <div class="text-center">
                                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-light btn-sm me-2">
                                            <i class="fas fa-eye me-1"></i>Voir
                                        </a>
                                        {% if app.user and product.stock > 0 %}
                                            <form method="post" action="{{ path('app_cart_add', {id: product.id}) }}" class="d-inline">
                                                <button type="submit" class="btn btn-dark btn-sm">
                                                    <i class="fas fa-cart-plus me-1"></i>Ajouter
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>

                            <div class="product-info text-center">
                                <div class="product-brand">{{ product.brand }}</div>
                                <h5 class="product-name">{{ product.name }}</h5>
                                <div class="product-price">{{ product.price|number_format(0, ',', ' ') }} DT</div>
                                {% if product.stock <= 5 and product.stock > 0 %}
                                    <small class="text-warning">Plus que {{ product.stock }} en stock</small>
                                {% elseif product.stock == 0 %}
                                    <small class="text-danger">Rupture de stock</small>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="text-center mt-5">
                <a href="{{ path('app_product_index') }}" class="btn-primary-custom">
                    Voir Toute la Collection
                </a>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-light mb-3">Nos Catégories</h2>
                <p class="lead text-muted">Découvrez notre sélection exclusive de montres par catégorie</p>
            </div>

            <div class="row g-4">
                {% if categories is defined and categories|length > 0 %}
                    {% for category in categories|slice(0, 3) %}
                        <div class="col-md-4">
                            <a href="{{ path('app_category_show', {slug: category.slug}) }}" class="text-decoration-none">
                                <div class="category-card h-100">
                                    {% if category.image %}
                                        <img src="{{ asset('uploads/categories/' ~ category.image) }}" class="category-image" alt="{{ category.name }}">
                                    {% else %}
                                        <div class="category-image bg-gradient d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                            {% if 'luxe' in category.slug %}
                                                <i class="fas fa-gem fa-4x text-white"></i>
                                            {% elseif 'sport' in category.slug %}
                                                <i class="fas fa-running fa-4x text-white"></i>
                                            {% elseif 'chronographe' in category.slug %}
                                                <i class="fas fa-stopwatch fa-4x text-white"></i>
                                            {% elseif 'plongee' in category.slug %}
                                                <i class="fas fa-swimmer fa-4x text-white"></i>
                                            {% elseif 'aviateur' in category.slug %}
                                                <i class="fas fa-plane fa-4x text-white"></i>
                                            {% else %}
                                                <i class="fas fa-clock fa-4x text-white"></i>
                                            {% endif %}
                                        </div>
                                    {% endif %}

                                    <div class="category-overlay">
                                        <h4 class="category-name">{{ category.name }}</h4>
                                        <p class="category-description">{{ category.description|slice(0, 80) }}{% if category.description|length > 80 %}...{% endif %}</p>
                                        <div class="mt-3">
                                            <span class="btn btn-light btn-sm">
                                                Découvrir <i class="fas fa-arrow-right ms-1"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                {% else %}
                    <!-- Fallback if no categories are passed from controller -->
                    <div class="col-md-4">
                        <a href="{{ path('app_category_show', {slug: 'montres-de-luxe'}) }}" class="text-decoration-none">
                            <div class="category-card h-100">
                                <div class="category-image bg-gradient d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                    <i class="fas fa-gem fa-4x text-white"></i>
                                </div>
                                <div class="category-overlay">
                                    <h4 class="category-name">Montres de Luxe</h4>
                                    <p class="category-description">Collection exclusive des plus grandes manufactures horlogères</p>
                                    <div class="mt-3">
                                        <span class="btn btn-light btn-sm">
                                            Découvrir <i class="fas fa-arrow-right ms-1"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="{{ path('app_category_show', {slug: 'montres-sport'}) }}" class="text-decoration-none">
                            <div class="category-card h-100">
                                <div class="category-image bg-gradient d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                                    <i class="fas fa-running fa-4x text-white"></i>
                                </div>
                                <div class="category-overlay">
                                    <h4 class="category-name">Montres Sport</h4>
                                    <p class="category-description">Montres robustes conçues pour les activités sportives et l'aventure</p>
                                    <div class="mt-3">
                                        <span class="btn btn-light btn-sm">
                                            Découvrir <i class="fas fa-arrow-right ms-1"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="{{ path('app_category_show', {slug: 'chronographes'}) }}" class="text-decoration-none">
                            <div class="category-card h-100">
                                <div class="category-image bg-gradient d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                                    <i class="fas fa-stopwatch fa-4x text-white"></i>
                                </div>
                                <div class="category-overlay">
                                    <h4 class="category-name">Chronographes</h4>
                                    <p class="category-description">Montres équipées de fonction chronométrage précis</p>
                                    <div class="mt-3">
                                        <span class="btn btn-light btn-sm">
                                            Découvrir <i class="fas fa-arrow-right ms-1"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endif %}
            </div>

            <div class="text-center mt-5">
                <a href="{{ path('app_category_index') }}" class="btn-primary-custom">
                    Voir Toutes les Catégories
                </a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-3 text-center">
                    <div class="mb-3">
                        <i class="fas fa-shipping-fast fa-3x text-dark"></i>
                    </div>
                    <h5 class="fw-light">Livraison Gratuite</h5>
                    <p class="text-muted small">Livraison gratuite dans toute la Tunisie</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="mb-3">
                        <i class="fas fa-shield-alt fa-3x text-dark"></i>
                    </div>
                    <h5 class="fw-light">Garantie Authentique</h5>
                    <p class="text-muted small">Toutes nos montres sont garanties authentiques</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="mb-3">
                        <i class="fas fa-undo fa-3x text-dark"></i>
                    </div>
                    <h5 class="fw-light">Retour Gratuit</h5>
                    <p class="text-muted small">30 jours pour changer d'avis</p>
                </div>
                <div class="col-md-3 text-center">
                    <div class="mb-3">
                        <i class="fas fa-headset fa-3x text-dark"></i>
                    </div>
                    <h5 class="fw-light">Support 24/7</h5>
                    <p class="text-muted small">Notre équipe est à votre disposition</p>
                </div>
            </div>
        </div>
    </section>

    <script>
        // Add hover effect to product cards
        document.addEventListener('DOMContentLoaded', function() {
            const productCards = document.querySelectorAll('.product-card');

            productCards.forEach(card => {
                const overlay = card.querySelector('.position-absolute.bg-dark');

                card.addEventListener('mouseenter', function() {
                    if (overlay) {
                        overlay.classList.remove('opacity-0');
                        overlay.classList.add('opacity-100');
                    }
                });

                card.addEventListener('mouseleave', function() {
                    if (overlay) {
                        overlay.classList.remove('opacity-100');
                        overlay.classList.add('opacity-0');
                    }
                });
            });
        });
    </script>
{% endblock %}
