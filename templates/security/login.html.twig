{% extends 'base.html.twig' %}

{% block title %}Connexion - WatchStore{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <i class="fas fa-clock fa-3x text-primary mb-3"></i>
                            <h2>Connexion</h2>
                            <p class="text-muted">Accédez à votre compte WatchStore</p>
                        </div>

                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <form method="post" action="{{ path('app_login') }}">
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email</label>
                                <input type="email"
                                       value="{{ last_username }}"
                                       name="_username"
                                       id="inputEmail"
                                       class="form-control"
                                       autocomplete="email"
                                       required
                                       autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">Mot de passe</label>
                                <input type="password"
                                       name="_password"
                                       id="inputPassword"
                                       class="form-control"
                                       autocomplete="current-password"
                                       required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="d-grid">
                                <button class="btn btn-primary btn-lg" type="submit">
                                    <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                                </button>
                            </div>
                        </form>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-0">Pas encore de compte ?</p>
                            <a href="{{ path('app_register') }}" class="btn btn-outline-primary">
                                <i class="fas fa-user-plus me-2"></i>Créer un compte
                            </a>
                        </div>

                        <!-- Comptes de test -->
                        <div class="mt-4 p-3 bg-light rounded">
                            <h6 class="text-center mb-2">Comptes de test</h6>
                            <small class="d-block text-center text-muted">Admin: admin@watchstore.fr / admin123</small>
                            <small class="d-block text-center text-muted">User: user@watchstore.fr / user123</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
