{% extends 'base.html.twig' %}

{% block title %}Inscription - ENZO Collection{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="bg-white shadow-lg p-5">
                    <div class="text-center mb-5">
                        <h2 class="fw-light mb-3">Créer un compte</h2>
                        <p class="text-muted">Rejoignez la communauté ENZO Collection</p>
                    </div>

                    {{ form_start(registrationForm) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-500">Prénom</label>
                            {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Votre prénom'}}) }}
                            {{ form_errors(registrationForm.firstName) }}
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-500">Nom</label>
                            {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Votre nom'}}) }}
                            {{ form_errors(registrationForm.lastName) }}
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-500">Adresse email</label>
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'votre@email.com'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-500">Mot de passe</label>
                            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control form-control-lg', 'placeholder': '••••••••'}}) }}
                            {{ form_errors(registrationForm.plainPassword.first) }}
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-500">Confirmer le mot de passe</label>
                            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control form-control-lg', 'placeholder': '••••••••'}}) }}
                            {{ form_errors(registrationForm.plainPassword.second) }}
                        </div>
                    </div>

                    <div class="d-grid mt-4 mb-4">
                        <button type="submit" class="btn btn-dark btn-lg">
                            Créer mon compte
                        </button>
                    </div>
                    {{ form_end(registrationForm) }}

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-3">Déjà un compte ?</p>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-dark">
                            Se connecter
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
